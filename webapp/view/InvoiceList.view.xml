<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <VBox class="sapUiSmallMargin">
    <SearchField
      placeholder="Search products"
      liveChange=".onFilterInvoices"
      width="50%" />
    <Button text="Sort by Price" press=".onSortInvoices"/>
    <Table
      id="invoiceList"
      items="{/Invoices}">
      <columns>
        <Column><Text text="Product"/></Column>
        <Column><Text text="Price"/></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Text text="{ProductName}"/>
            <Text text="{ExtendedPrice}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </VBox>
</mvc:View>
