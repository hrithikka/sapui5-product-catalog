<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <VBox class="sapUiSmallMargin">
    <SearchField
      placeholder="Search products"
      liveChange=".onFilterInvoices"
      width="50%" />
    
    <Button text="Sort by Price" press=".onSortInvoices"/>
    
    <Table
      id="invoiceList"
      items="{/Products}"
      itemPress=".onListItemPress"
      mode="SingleSelectMaster">
      
      <columns>
        <Column><Text text="Product"/></Column>
        <Column><Text text="Price"/></Column>
        <Column><Text text="Action"/></Column>
      </columns>
      
      <items>
        <ColumnListItem press=".onOpenDialog">
          <cells>
            <Text text="{ProductName}"/>
            <ObjectNumber
              number="{path: 'UnitPrice', formatter: '.formatter.formatCurrency'}" />
            <Button text="View" press=".onOpenDialog"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </VBox>
</mvc:View>
