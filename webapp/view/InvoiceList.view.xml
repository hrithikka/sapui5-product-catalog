<mvc:View
  controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <App>
    <Page id="invoicePage" title="Product List">
      <subHeader>
        <Toolbar>
          

          <SearchField
            width="100%"
            placeholder="Search by Product Name"
            liveChange="onFilterInvoices" 
            class="searchBar"/>
          <Button text="Sort by Price" press="onSortInvoices" class="buttonPrimary" />
          <Button id="themeToggleButton" text="ðŸŒ™" press="onToggleTheme" tooltip="Toggle Dark Mode" />

        </Toolbar>
      </subHeader>

      <content>
        <List
          id="invoiceList"
          items="{
            path: '/Products'
          }"
          growing="true"
          growingScrollToLoad="true"
          itemPress="onListItemPress">
          <items>
            <StandardListItem
              title="{ProductName}"
              description="Price: {path: 'UnitPrice', formatter: '.formatter.currency'}"
              info="View"
              type="Active"
              press="onOpenDialog" />
          </items>
        </List>
      </content>
    </Page>
  </App>
</mvc:View>
